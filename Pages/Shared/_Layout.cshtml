@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Gestión de Reservas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #e5e5e5;
            font-family: 'Segoe UI', Arial, sans-serif;
        }
        .sidebar {
            width: 270px;
            background-color: #bdbdbd;
            min-height: 100vh;
            padding: 30px 0 30px 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .sidebar .logo-img {
            width: 140px;
            margin-bottom: 10px;
        }
        .logo {
            font-family: 'Georgia', serif;
            font-size: 2rem;
            font-weight: bold;
            color: #56433f;
            margin-bottom: 30px;
        }
        .sidebar .nav-link {
            background-color: #56433f;
            color: white;
            margin: 12px 0;
            border-radius: 10px;
            text-align: center;
            padding: 18px 0;
            font-size: 1.2rem;
            font-weight: 500;
            width: 200px;
            transition: background 0.2s;
        }
        .sidebar .nav-link:hover {
            background-color: #3e2f2c;
            color: #fff;
        }
        .sidebar .logout-link {
            margin-top: auto;
            background-color: #56433f;
            color: white;
            border-radius: 10px;
            text-align: center;
            padding: 18px 0;
            font-size: 1.2rem;
            font-weight: 500;
            width: 200px;
        }
        .main {
            flex: 1;
            background: #fff;
            min-height: 100vh;
            padding: 0;
            display: flex;
            flex-direction: column;
        }
        .header {
            background-color: #bdbdbd;
            padding: 24px 40px 16px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header-title {
            font-size: 2rem;
            font-weight: bold;
            color: #56433f;
        }
        .header-user {
            background: #56433f;
            color: #fff;
            padding: 8px 32px;
            border-radius: 0 0 10px 10px;
            font-size: 1.1rem;
            font-weight: 500;
        }
        main {
            flex: 1;
            padding: 40px 40px 0 40px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <div class="sidebar">
            <img src="/img/logo.png" alt="Logo" class="logo-img">
            <div class="logo">AldeaUruel</div>
            <a class="nav-link" asp-page="/Reservas">Reservas</a>
            <a class="nav-link" asp-page="/Cabanas/Index">Cabañas</a>
            <a class="nav-link" asp-page="/Clientes">Clientes</a>
            <a class="nav-link" asp-page="/Reportes">Reportes</a>
            <a class="nav-link" asp-page="/Usuarios">Usuarios</a>
            <a class="nav-link" asp-page="/Ajustes">Ajustes</a>
            <a class="logout-link mt-auto" asp-page="/Logout">Cerrar Sesión</a>
        </div>

        <div class="main">
            <div class="header">
                <div class="header-title">Sistema de Gestión de Reservas</div>
                <div class="header-user">Administrador</div>
            </div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
