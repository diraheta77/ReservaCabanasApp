@page "{id:int}"
@model ReservaCabanasApp.Pages.Cabanas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Cabaña";
}

<h2>Eliminar Cabaña</h2>
<h4>¿Estás seguro que deseas eliminar la cabaña "@Model.Cabana.Nombre"?</h4>
<form method="post">
    <input type="hidden" asp-for="Cabana.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>