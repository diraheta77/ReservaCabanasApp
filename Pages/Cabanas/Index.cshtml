@page
@model ReservaCabanasApp.Pages.Cabanas.IndexModel
@{
    ViewData["Title"] = "Cabañas";
}

<h2>Cabañas</h2>
<a asp-page="Create" class="btn btn-primary mb-3">Nueva Cabaña</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Número</th>
            <th>Nombre</th>
            <th>Capacidad</th>
            <th>Camas Matrimonial</th>
            <th>Camas Individuales</th>
            <th>Precio por día</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Cabanas)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>@item.Capacidad</td>
            <td>@item.CamasMatrimonial</td>
            <td>@item.CamasIndividuales</td>
            <td>@item.PrecioPorNoche.ToString("C")</td>
            <td>@(item.Activa ? "Sí" : "No")</td>
            <td>
                <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver</a>
                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>