@page "{id:int}"
@model ReservaCabanasApp.Pages.Cabanas.EditModel
@{
    ViewData["Title"] = "Editar Cabaña";
}

<h2>Editar Cabaña</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Cabana.Id" />
    <div class="mb-3">
        <label asp-for="Cabana.Nombre" class="form-label"></label>
        <input asp-for="Cabana.Nombre" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Cabana.Capacidad" class="form-label"></label>
        <input asp-for="Cabana.Capacidad" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label asp-for="Cabana.CamasMatrimonial" class="form-label"></label>
        <input asp-for="Cabana.CamasMatrimonial" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label asp-for="Cabana.CamasIndividuales" class="form-label"></label>
        <input asp-for="Cabana.CamasIndividuales" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label asp-for="Cabana.PrecioPorNoche" class="form-label"></label>
        <input asp-for="Cabana.PrecioPorNoche" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label asp-for="Cabana.Observaciones" class="form-label"></label>
        <textarea asp-for="Cabana.Observaciones" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Imagen</label>
        <input type="file" name="Imagen" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Cabana.ImagenUrl))
        {
            <img src="@Model.Cabana.ImagenUrl" alt="Imagen actual" style="max-width:150px; margin-top:10px;" />
        }
    </div>
    <div class="mb-3 form-check">
        <input asp-for="Cabana.Activa" class="form-check-input" />
        <label asp-for="Cabana.Activa" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>