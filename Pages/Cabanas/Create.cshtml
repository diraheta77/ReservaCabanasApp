@page
@model ReservaCabanasApp.Pages.Cabanas.CreateModel
@{
    ViewData["Title"] = "Nueva Cabaña";
}

<style>
    .cabana-form-container {
        background: #fff;
        padding: 40px 30px 30px 30px;
        border-radius: 8px;
        max-width: 950px;
        margin: 0 auto;
    }
    .cabana-form-title {
        font-weight: bold;
        font-size: 1.2rem;
        margin-bottom: 24px;
    }
    .cabana-form-row {
        display: flex;
        gap: 40px;
    }
    .cabana-form-fields {
        flex: 2;
    }
    .cabana-form-img {
        flex: 1;
        display: flex;
        align-items: flex-start;
        justify-content: center;
    }
    .cabana-img-placeholder {
        width: 270px;
        height: 220px;
        border: 2px solid #888;
        background: #fafafa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #aaa;
        font-size: 1.1rem;
        position: relative;
    }
    .cabana-img-placeholder::before, .cabana-img-placeholder::after {
        content: "";
        position: absolute;
        background: #888;
    }
    .cabana-img-placeholder::before {
        width: 2px; height: 100%;
        left: 50%; top: 0; transform: translateX(-50%) rotate(45deg);
    }
    .cabana-img-placeholder::after {
        width: 2px; height: 100%;
        left: 50%; top: 0; transform: translateX(-50%) rotate(-45deg);
    }
    .cabana-form-label {
        font-weight: 500;
        margin-bottom: 2px;
    }
    .cabana-form-input, .cabana-form-textarea {
        background: #e5e5e5;
        border: none;
        border-radius: 3px;
        margin-bottom: 16px;
        width: 100%;
        padding: 6px 10px;
    }
    .cabana-form-textarea {
        min-height: 70px;
        resize: vertical;
    }
    .cabana-form-buttons {
        display: flex;
        justify-content: center;
        gap: 80px;
        margin-top: 40px;
    }
    .cabana-btn {
        background: #5c4a45;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 14px 60px;
        font-size: 1.1rem;
        font-weight: 500;
        transition: background 0.2s;
    }
    .cabana-btn:hover {
        background: #3e2f2c;
    }
</style>

<div class="cabana-form-container">
    <div class="cabana-form-title">DATOS DE CABAÑA</div>
    <form method="post" enctype="multipart/form-data">
        <div class="cabana-form-row">
            <div class="cabana-form-fields">
                <label class="cabana-form-label">Número</label>
                <input class="cabana-form-input" value="(Automático)" disabled />

                <label asp-for="Cabana.Nombre" class="cabana-form-label"></label>
                <input asp-for="Cabana.Nombre" class="cabana-form-input" />

                <label asp-for="Cabana.Capacidad" class="cabana-form-label">Cantidad de Huéspedes</label>
                <input asp-for="Cabana.Capacidad" class="cabana-form-input" type="number" />

                <label asp-for="Cabana.CamasMatrimonial" class="cabana-form-label"></label>
                <input asp-for="Cabana.CamasMatrimonial" class="cabana-form-input" type="number" />

                <label asp-for="Cabana.CamasIndividuales" class="cabana-form-label"></label>
                <input asp-for="Cabana.CamasIndividuales" class="cabana-form-input" type="number" />

                <label asp-for="Cabana.PrecioPorNoche" class="cabana-form-label">Precio por día</label>
                <input asp-for="Cabana.PrecioPorNoche" class="cabana-form-input" type="number" step="0.01" />

                <label asp-for="Cabana.Observaciones" class="cabana-form-label"></label>
                <textarea asp-for="Cabana.Observaciones" class="cabana-form-textarea"></textarea>
            </div>
            <div class="cabana-form-img">
                <div class="cabana-img-placeholder" id="imgPreviewBox">
                    <img id="imgPreview" src="#" alt="Vista previa" style="display:none; max-width:100%; max-height:100%;" />
                </div>
            </div>
        </div>
        <div class="mb-3" style="margin-top: 10px;">
            <label class="cabana-form-label">Imagen</label>
            <input type="file" name="Imagen" class="form-control" style="background:#e5e5e5; border:none;" id="inputImagen" accept="image/*" />
        </div>
        <div class="mb-3 form-check" style="margin-top: 10px;">
            <input asp-for="Cabana.Activa" class="form-check-input" />
            <label asp-for="Cabana.Activa" class="form-check-label"></label>
        </div>
        <div class="cabana-form-buttons">
            <a asp-page="Index" class="cabana-btn" style="background:#5c4a45;">Cancelar</a>
            <button type="submit" class="cabana-btn">Confirmar</button>
        </div>
    </form>
</div>

@section Scripts {
<script>
    document.getElementById('inputImagen').addEventListener('change', function (evt) {
        const [file] = this.files;
        const img = document.getElementById('imgPreview');
        if (file) {
            img.src = URL.createObjectURL(file);
            img.style.display = 'block';
        } else {
            img.src = '#';
            img.style.display = 'none';
        }
    });
</script>
}